@charset "utf-8";
/* CSS Document */

/*登录*/
* { margin:0; padding:0; font-family:SimSun;}
.fl { float:left;}
.fr { float:right;}
.clear { clear:both;}
input,textarea{outline:none; box-sizing:content-box;}

.sign_in{width: 100%;height: 100%;position: relative; -background:url(../../common/images/login_bady_bg.png) no-repeat 2% 50px;}
.sign_in_bg{height:74px;width:100%;background: #c00405;position:absolute;top: 60.156%;position: relative;}
.sign_in_bg_text p{text-align: right;margin-bottom: 10px; font-size:12px;}
.sign_in_bg_text{width: 366;height: 72px;position: absolute;top:100px;left: 36.164%;color:#999999}
.login_logo{width: 531px;height:auto; overflow:hidden;position: absolute;z-index: 100;top: -80px;left:19%;}
.sign_title{width: 531px;height:auto; overflow:hidden;position: absolute;z-index: 100;top: -102px;left: 30%;}
.sign_in_small{width: 340px;height: 410px;border: solid 2px #c00405;border-radius: 6px; position: absolute;top: 26.04%;left: 64.05%;z-index: 10px;background:url(../../common/images/sign_bdbg.png);font: Microsoft YaHei; z-index:999;}
.sign_in_small_small{width: 330px;height: 400px;border: solid 1px #c00405;margin-top: 4px;margin-left: 4px; background:#FFF;}

.sign_in_small_small .user_name{ background:url(../../common/images/jx/user_name.png) no-repeat 240px center;margin-top:20px;}
.sign_in_small_small .user_password{ background:url(../../common/images/jx/user_password.png) no-repeat 240px center;}
.sign_in_small_small .user_yunK{ background:url(../../common/images/jx/user_yunK.png) no-repeat 240px center;}

.stand{display: inline-block;vertical-align: top;}
.sign_in_small_small>p:first-child{color: #c00405;font-size: 28px;font-weight: bold;text-align: center;margin-top: 33px; height:48px;background:url(../../common/images/jx/p_line.png) no-repeat center 42px;}
.sign_in_small input{width: 250px;height: 28px;border: solid 1px #c00405;border-radius: 6px; margin-left: 30px;margin-bottom: 10px;background:url(../../common/images/sign_bdbg.png); padding:4px 6px 4px 10px; font-size:14px; color:#666; font-family:Microfost YaHei;}
.sign_in_small p+i{width: 201px;height: 6px;background: url(../../common/images/line.png) no-repeat;margin:20px 0 20px 66px;}
.user_check { font-size:12px;height:14px;line-height:14px;}
.user_check input { width:14px; height:14px;margin: 1px 6px 0 29px; cursor:pointer;border:none;border-radius:0; display:inline-block;vertical-align: top;padding:0 !important;}
.user_checkbf{width: 14px;height: 14px;background: url(../../common/images/sign_check_btn.png) no-repeat;}
.user_checked{width: 14px;height: 14px;background: url(../../common/images/checked.png) no-repeat;}
.user_check .auto,.forget{color:#c00405;cursor: default;} 
.user_check .register{color: #f8ac94;margin-left: 86px;margin-right: 10px;cursor: default;}
.user_check+span{width: 270px;height: 40px;background: #c00405;border-radius: 4px;margin-top: 26px;margin-left: 30px;text-align: center;line-height: 40px;font-size: 24px;color: #fff;}
.user_check+span:hover{cursor:pointer;}
.user_check .auto{display:inline-block;vertical-align:bottom;height:14px;line-height:14px;}


.tishi { margin:12px 0 18px;}
.tishi p { width:270px; height:24px; line-height:24px; font-size:12px; color:#e23342; text-align:center; border:1px solid #e03a3c; background:url(../../common/images/icon_zc.png) no-repeat -170px 4px; background-color:#ffebec; margin:0 auto;}