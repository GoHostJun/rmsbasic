
/*头部样式*/
.jx_header {
    position: fixed;
    left: 0;
    top:0;
    z-index: 99;
    width: 100%;
    height: 79px;
    background: rgba(255,255,255,.8);
    border-bottom: 1px solid #e7e7e7;
    box-shadow: 0 0 5px rgba(0,0,0,.15);
    min-width: 960px;
}
.jx_logo {
	float: left;
	margin: 15px 0 0 20px;
}
.jx_nav {
	margin-top: 24px;
}
.jx_nav > li {
	position: relative;
	float: left;
	margin-left: 2px;
	padding-bottom: 24px;
}
.jx_nav > li a {
	display: block;
	border-radius: 100px;
	color: #666;
}
.jx_nav li p {
	width: 86px;
	height: 28px;
	line-height: 28px;
	color: #666;
	font-size: 14px;
	border:2px solid transparent;
	border-radius:100px;
	text-align: center;
	cursor: pointer;
}
.jx_nav li.nav_show .mark,.jx_nav li.nav_show .little_nav {
	display: block;
}
.jx_nav li.active p a,.jx_nav li.nav_show p a,.jx_nav li:hover p a {
	color: #ffad00;
}
.jx_nav li.active p,.jx_nav li.nav_show p,.jx_nav li p:hover {
	color: #ffad00;
	border:2px solid #ffad00;
}
.jx_nav li p i {
	width: 6px;
	height: 5px;
	background: url(../../images/index/index1_icon.png) no-repeat -3px -3px;
	margin-left: 8px;
	vertical-align: middle;
}
.jx_nav li.active p i,.jx_nav li p:hover i,.jx_nav li.nav_show p i {
	background: url(../../images/index/index1_icon.png) no-repeat -3px -19px;
}
.mark {
	position: fixed;
	left: 0;
	top: 56px;
	z-index: 100;
	width: 100%;
	padding-top:24px;
}
.mark_cont {
	width: 100%;
	height: 40px;
	background: rgba(36,39,41,.2);
}

.more .little_nav{
	width: 390px;
}
.little_nav {
	position: absolute;
	top: 63px;
	left: -62px;
	z-index: 111;
	width: 300px;
}
.more .little_nav {
	left: -130px;
}
.little_nav li {
	float: left;
	width: 84px;
	height: 26px;
	line-height: 26px;
	color: #666664;
	margin-right: 10px;
	text-align: center;
	border-radius: 100px;
	font-size: 14px;
	cursor: pointer;
}
.little_nav li.active,.little_nav li:hover {
	color: #FFF;
	background: #1ebf8b;
}
.little_nav li.active a,.little_nav li:hover a {
	color: #FFF;
	background: #ffad00
;
}
/*用户*/
.user_div {
	margin: 28px 0 0 120px;
}
.user_div i {
	width: 20px;
	height: 20px;
	vertical-align: middle;
}
.user_div .user_name {
	position:relative;
	display: inline-block;
	font-size: 14px;
	color: #666;
	cursor:pointer;
}
.user_div .user_name i {
	background: url(../../images/index/index1_icon.png) no-repeat -72px -1px;
}
.messages {
	position: relative;
	display: inline-block;
	cursor: pointer;
}
.messages > i {
	margin:0 30px 0 18px;
	background: url(../../images/index/index1_icon.png) no-repeat -28px -2px;
}
.messages .num {
	position: absolute;
	right: 20px;
	top:-9px;
	display: inline-block;
	height: 18px;
	line-height: 18px;
	padding:0 6px;
	font-size: 12px;
	color: #FFF;
	background: #fc6668;
	border-radius: 50%;
}

.user_div .user_pop {
	left:-1px;
}
.user_div .user_pop .user_pop_triangle {
	border-left:1px solid #999;
	border-top:1px solid #999;
	top:-5px;
}
.user_div .user_name b.sanj {
	display:inline-block;
	width: 6px;
	height: 5px;
	background: url(../../images/index/index1_icon.png) no-repeat -3px -3px;
	margin-left: 8px;
	vertical-align: middle;
}
.popup_inner {
	border:none;
}
.msg_btn_down {
	right:18px;
}